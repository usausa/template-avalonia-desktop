<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:s="http://smart/avalonia"
             xmlns:local="clr-namespace:Template.DesktopApp.Views.Main"
             mc:Ignorable="d"
             x:Class="Template.DesktopApp.Views.Main.SubView"
             x:DataType="local:SubViewModel"
             s:DataContextResolver.Type="local:SubViewModel"
             d:DesignWidth="800" d:DesignHeight="450">

    <StackPanel>
        <Label Content="{Binding Message}" />
        <Button Command="{Binding NavigateCommand}"
                Content="Navigate" />
    </StackPanel>

</UserControl>
